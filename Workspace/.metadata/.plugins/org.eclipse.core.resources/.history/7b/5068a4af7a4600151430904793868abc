<script type="text/javascript">

	$('#payablesTab').addClass('active');
	$('#payablesTab').click(function(){ 
		$('#payablesTabContent').show(); 
		$('#receivablesTab').removeClass('active');
		$('#payablesTab').addClass('active');
		$('#suppliersTab').removeClass('active');
		$('#customersTab').removeClass('active');
	});
	
	$('#receivablesTab').click(function(){ 
		$('#receivablesTabContent').show(); 
		$('#receivablesTab').addClass('active');
		$('#payablesTab').removeClass('active');
		$('#suppliersTab').removeClass('active');
		$('#customersTab').removeClass('active');
	});

	$('#suppliersTab').click(function(){ 
		$('#suppliersTabContent').show(); 
		$('#receivablesTab').removeClass('active');
		$('#payablesTab').removeClass('active');
		$('#suppliersTab').addClass('active');
		$('#customersTab').removeClass('active');
	});
	
	$('#customersTab').click(function(){ 
		$('#customersTabContent').show(); 
		$('#receivablesTab').removeClass('active');
		$('#payablesTab').removeClass('active');
		$('#suppliersTab').removeClass('active');
		$('#customersTab').addClass('active');
	});


	$('#addPayableBtn').click(function(){
		$('#addPayable').modal('show');
	});
	
	$('#settingsLink').click(function(){
		$('#userSettings').modal('show');
	});

</script>
